{
  "name": "task-manager-api",
  "version": "1.0.0",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --detectOpenHandles --coverage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:int": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:debug": "node --inspect-brk node_modules/jest/bin/jest.js --runInBand",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/src/config/",
      "/src/middlewares/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  }
}
